import java.text.SimpleDateFormat;
import java.util.Date;
import java.util.Scanner;


public class HourConverter {

	public static void main(String[] args) {

		try{
			
			Scanner reader = new Scanner(System.in);
			
			String playerInput;
			
			System.out.println("Enter time in decimal ex(6.5) ");
			playerInput = reader.nextLine();
			
			
			
			SimpleDateFormat _hour = new SimpleDateFormat("h");
			SimpleDateFormat _minute = new SimpleDateFormat("m");
			
			Date d1 = _hour.parse(playerInput);
		
			System.out.println(_hour.format(d1));
			
		} catch (Exception e){
			e.printStackTrace();
			}

		}

}
