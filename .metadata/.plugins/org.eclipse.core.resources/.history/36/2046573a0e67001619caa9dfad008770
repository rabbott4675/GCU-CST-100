
public class NFLPlayer {
	//Define the player stats fields
	private String firstName;
	private String lastName;
	private String team;
	private byte age;
	private int heightFeet;
	private int heightInch;
	private int TDS;
	private int INT;
	private int YDS;
	private int RTG;
	private static int player = 0;
	
	//argument for player class
	//Prints players stats
	
	public NFLPlayer(String first, String last, String tm, byte AGE, int feet, int inch, int Tds, int Int, int Yds, int Rtg, int player){
	firstName = first;
	lastName = last;
	team = tm;
	age = AGE; 
	heightFeet = feet; 
	heightInch = inch;
	TDS = Tds;
	INT = Int;
	YDS = Yds;
	RTG = Rtg;
	player++;
	
	//print our individual player stats
	System.out.printf(""
			+ "Name: %s %s  "
			+ "Team: %s  "
			+ "Age: %d  "
			+ "Height: %d ft. %d in.  "
			+ "TDS: %d  "
			+ "INT: %d  "
			+ "YDS: %d  "
			+ "RTG: %d  "
			+ "Player Count: %d \n", firstName, lastName, team, age, heightFeet, heightInch, TDS, INT, YDS, RTG, player );
	}
	
	//define player stats
	public static void main(String[] args){
		NFLPlayer player1 = new NFLPlayer("Jimmy","Garoppolo","New England Patriots", age, 24, INT, INT, INT, INT, INT, player);
		NFLPlayer player2 = new NFLPlayer("Jimmy","Garoppolo","New England Patriots", age, 24, INT, INT, INT, INT, INT, player);
	}
	
}
