import java.sql.Date;
import java.text.DateFormat;
import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Scanner;

public class TimeConversion {
	
	public static void main(String[] args) throws ParseException {

		Scanner reader = new Scanner(System.in);
		
		String playerInput;
		
		System.out.println("Enter time in 24hr time: (ex: 23:23) ");
		playerInput = reader.nextLine();
		
		DateFormat time = new SimpleDateFormat ("HH:mm");
		Date d1 = (Date) time.parse(playerInput);
		DateFormat time12 = new SimpleDateFormat("hh:mm");
		String d1Convert = d1.toString();
		Date d2 = d2.format(time12).toLowerCase();
		
		System.out.println("The time was converted from " + d1 + " to " + d2 + ".");
		
		
	}

}
