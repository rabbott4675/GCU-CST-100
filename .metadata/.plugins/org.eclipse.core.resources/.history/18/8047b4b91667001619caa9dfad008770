
public class NFLPlayer {
	//Define the player stats fields
	private String firstName;
	private String lastName;
	private String team;
	private int age;
	private int heightFeet;
	private int heightInch;
	private double TDS;
	private double INT;
	private double YDS;
	private double RTG;
	private static int player = 0;
	
	//argument for player class
	//Prints players stats
	
	public NFLPlayer(String first, String last, String tm, int AGE, int feet, int inch, int Tds, int Int, int Yds, int Rtg, int player){
	firstName = first;
	lastName = last;
	team = tm;
	age = AGE; 
	heightFeet = feet; 
	heightInch = inch;
	TDS = Tds;
	INT = Int;
	YDS = Yds;
	RTG = Rtg;
	player++;
	
	//print our individual player stats
	System.out.printf(""
			+ "Name: %s %s  "
			+ "Team: %s  "
			+ "Age: %d  "
			+ "Height: %d ft. %d in.  "
			+ "TDS: %d  "
			+ "INT: %d  "
			+ "YDS: %d  "
			+ "RTG: %d  "
			+ "Player Count: %d \n", firstName, lastName, team, age, heightFeet, heightInch, TDS, INT, YDS, RTG, player );
	}

	
	public NFLPlayer(String string, String string2, String string3, int i, int j, int k, int l, int m, int n,
			double d) {
		// TODO Auto-generated constructor stub
	}


	public static void main(String[] args){
		NFLPlayer player1 = new NFLPlayer(
				"Jimmy",
				"Garoppolo",
				"New England Patriots", 
				24, 6, 2, 0, 0, 6, 39.6);
		NFLPlayer player2 = new NFLPlayer(
				"Ryan",
				"Abbott",
				"New England Patriots", 
				24, 6, 2, 0, 0, 6, 39.6);
	}
}
