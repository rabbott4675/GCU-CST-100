
public class NFLPlayer {
	
	
	//Define the player stats fields
			private String firstName;
			private String lastName;
			private String team;
			private int age;
			private int weight;
			private int heightFeet;
			private int heightInch;	
			
		//Getter and Setter
			public String getFirstName() {
				return firstName;
			}

			public void setFirstName(String firstName) {
				this.firstName = firstName;
			}

			public String getLastName() {
				return lastName;
			}

			public void setLastName(String lastName) {
				this.lastName = lastName;
			}

			public String getTeam() {
				return team;
			}

			public void setTeam(String team) {
				this.team = team;
			}

			public int getAge() {
				return age;
			}

			public void setAge(int age) {
				this.age = age;
			}

			public int getWeight() {
				return weight;
			}

			public void setWeight(int weight) {
				this.weight = weight;
			}

			public int getHeightFeet() {
				return heightFeet;
			}

			public void setHeightFeet(int heightFeet) {
				this.heightFeet = heightFeet;
			}

			public int getHeightInch() {
				return heightInch;
			}

			public void setHeightInch(int heightInch) {
				this.heightInch = heightInch;
			}
		
	
	//Method for player class, prints players stats
	public NFLPlayer(String string, String string2, String string3, int i, int j, int k, int e) {
		firstName = string;
		lastName = string2;
		team = string3;
		age = i; 
		heightFeet = j; 
		heightInch = k;
		weight = e;
		
		//print our individual player stats
		System.out.printf(""
				+ "Name: %s %s  "
				+ "Team: %s  "
				+ "Age: %d  "
				+ "Weight: %d  "
				+ "Height: %d ft. %d in. \n", 
				firstName, lastName, team, age, weight, heightFeet, heightInch);
		}
	

}
