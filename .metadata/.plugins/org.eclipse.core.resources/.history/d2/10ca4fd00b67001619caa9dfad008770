
public class NFLPlayer {
	//Define the stats made available
	private String firstName;
	private String lastName;
	private String team;
	private byte age;
	private int heightFeet;
	private int heightInch;
	private int TDS;
	private int INT;
	private int YDS;
	private int RTG;
	private static int player = 0;
	
	//argument for player class
	//Prints players stats
	
	public NFLPlayer(String first, String last){
	firstName = first;
	lastName = last;
	player++;
	
	System.out.printf(""
			+ "Name: %s %s  "
			+ "Team: %s  "
			+ "Age: %d  "
			+ "Height: %d ft. %d in.  "
			+ "TDS: %d  "
			+ "INT: %d  "
			+ "YDS: %d  "
			+ "RTG: %d  "
			+ "Player Count: %d", firstName, lastName, team, age, heightFeet, heightInch, TDS, INT, YDS, RTG, player );
	}
	
	public static void main(String[] args){
		NFLPlayer player1 = new NFLPlayer("Jimmy","Garoppolo");
	}
	
}
