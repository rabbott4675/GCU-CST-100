
public class NFLPlayer {
	//Define the player stats fields
	private String firstName;
	private String lastName;
	private String team;
	private int age;
	private int weight;
	private int heightFeet;
	private int heightInch;
	private double TDS;
	private double INT;
	private double YDS;
	private double RTG;	
	//argument for player class
	//Prints players stats
	
	public NFLPlayer(String string, String string2, String string3, int i, int j, int k, int e, double l, double m, double n,
			double d) {
		firstName = string;
		lastName = string2;
		team = string3;
		age = i; 
		heightFeet = j; 
		heightInch = k;
		TDS = l;
		INT = m;
		YDS = n;
		RTG = d;
		weight = e;
		
		//print our individual player stats
		System.out.printf(""
				+ "Name: %s %s  "
				+ "Team: %s  "
				+ "Age: %d  "
				+ "Weight: %d"
				+ "Height: %d ft. %d in.  "
				+ "Touchdowns: %s  "
				+ "Interceptions: %s  "
				+ "Yards: %s  "
				+ "RTG: %s\n", 
				firstName, lastName, team, age, weight, heightFeet, heightInch, TDS, INT, YDS, RTG);
		
	}


	public static void main(String[] args){
		NFLPlayer player1 = new NFLPlayer(
				"Jimmy",
				"Garoppolo",
				"New England Patriots", 
				23, 225, 6, 2, 0, 0, 6, 39.6);
		
		NFLPlayer player2 = new NFLPlayer(
				"Jacoby",
				"Brissett",
				"New England Patriots", 
				23, 235, 6, 4, 0, 0, 6, 0);
		
		NFLPlayer player3 = new NFLPlayer(
				"Tyler",
				"Gaffney",
				"New England Patriots", 
				23, 220, 6, 0, 0, 0, 6, 0);
		
		NFLPlayer player4 = new NFLPlayer(
				"Ryan",
				"Abbott",
				"New England Patriots", 
				23, 250, 6, 4, 0, 0, 6, 0);
	}
}
